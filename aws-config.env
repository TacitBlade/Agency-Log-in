# AWS Configuration for Agency Login App
# Copy this file to .env and update with your actual values

# EC2 Instance Configuration
EC2_HOST=YOUR_EC2_PUBLIC_IP_HERE
EC2_USER=ec2-user
KEY_PATH=./keys/AlphaAgency752.pem

# Domain and SSL Configuration
DOMAIN_NAME=alphaagency752.com
EMAIL=admin@alphaagency752.com

# AWS Credentials (if using AWS services beyond EC2)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_DEFAULT_REGION=us-east-1

# Application Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=change-this-to-a-secure-random-string
HOST=0.0.0.0
PORT=5000

# Optional: Database Configuration
# DATABASE_URL=sqlite:///agency_login.db

# Optional: Security Groups and Instance Details
# SECURITY_GROUP_ID=sg-xxxxxxxxx
# SUBNET_ID=subnet-xxxxxxxxx
# INSTANCE_TYPE=t2.micro
